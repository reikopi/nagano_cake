<p id="notice"><%= notice %></p>

<h1>商品一覧(全<%= @items.where('created_at > ?', Date.today).count %>件)</h1>
<!--全何件と表示するにはどうしたらいいのか調べる-->

<% @items.each do |item| %>
<div>
  <P><%= image_tag item.image %></P>
  <p>商品名<%= item.name %></p>
  <p><%= item.price %></p>
</div>
<% end %>

<%= paginate @items %>