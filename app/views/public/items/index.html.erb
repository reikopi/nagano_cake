<p id="notice"><%= notice %></p>

<h1>Public Items</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @public_items.each do |public_item| %>
      <tr>
        <td><%= link_to 'Show', public_item %></td>
        <td><%= link_to 'Edit', edit_public_item_path(public_item) %></td>
        <td><%= link_to 'Destroy', public_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

