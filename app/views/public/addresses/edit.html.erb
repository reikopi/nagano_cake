<h4>配送先編集</h4>

<%= form_with model:@address, url: public_address_path do |f| %>

<table class="table table-sm table-borderless">
<tbody>
  <tr>
    <th style="width: 10%">郵便番号（ハイフンなし）</th>
    <th style="width: 40%"><%= f.text_field :postal_code %></th>
  </tr>

 <tr>
   <th>住所</th>
   <th><%= f.text_area :address %></th>
 </tr>

 <tr>
   <th>宛名</th>
   <th><%= f.text_field :name %></th>
 </tr>

</tbody>
</table>

<div class="text-center">
<%= f.submit '変更内容を保存', class:"btn btn-success" %>
</div>

<% end %>