<h4>配送先登録／一覧</h4>


<%= form_with model: @address, url:public_addresses_path do |f| %>
 <table class="table">
 <tbody>
 <tr>
 <th>郵便番号（ハイフンなし）</th>
 <th><%= f.text_field :postal_code %></th>
 </tr>
 <tr>
 <th>住所</th>
 <th><%= f.text_area :address %></th>
 </tr>
 <tr>
 <th>宛名</th>
 <th><%= f.text_field :name %></th>
 </tr>
 </tbody>
 </table>

<div class="text-center">
<%= f.submit '新規登録', class:"btn btn-success" %>
</div>

<% end %>


<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">郵便番号</th>
      <th scope="col">住所</th>
      <th scope="col">宛名</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td><%= link_to "編集する", edit_public_address_path(address.id), class:"btn btn-success" %>
    <%=link_to "削除する", public_address_path(address), method: :delete, class:"btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>

</table>