<h4>新規会員登録</h4>
<% if @customer.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @customer, url: customer_registration_path do |f| %>

  <%= render "public/shared/error_messages", resource: resource %>

  <table class="table">
  <tbody>

  <tr>
    <th>名前</th>
    <th>(姓)<%= f.text_field :last_name, autofocus: true, required: true, class: 'form-control' %>
        (名)<%= f.text_field :first_name, autofocus: true, required: true, class: 'form-control' %></th>
  </tr>

  <tr>
    <th>フリガナ</th>
    <th>(セイ)<%= f.text_field :last_name_kana, autofocus: true, required: true, class: 'form-control' %>
        (メイ)<%= f.text_field :first_name_kana, autofocus: true, required: true, class: 'form-control' %></th>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
  </tr>

  <tr>
    <th>郵便番号(ハイフンなし)</th>
    <th><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></th>
  </tr>

  <tr>
    <th>住所</th>
    <th><%= f.text_field :address, autofocus: true, autocomplete: "address" %></th>
  </tr>

  <tr>
    <th>電話番号(ハイフンなし)</th>
    <th><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></th>
  </tr>

　 <tr>
　   <th>パスワード(<%= @minimum_password_length %> 文字以上)</th>
　   <% if @minimum_password_length %>
　   <% end %>
　   <th><%= f.password_field :password, autocomplete: "new-password" %></th>
　 </tr>

   <tr>
     <th>パスワード（確認用）</th>
     <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
   </tr>

  </tbody>
  </table>

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
<% end %>

<h4>既に登録済みの方</h4>

<%= link_to 'こちら', new_customer_session_path %>からログインしてください。
