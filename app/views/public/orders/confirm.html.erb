<h1>注文情報確認</h1>
<table class="table table-hover table-inverse">
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
  </thead>
  <tbody>
  <% current_customer.cart_items.each do |cart_item| %>
      <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal.to_s(:delimited) %></td>
      </tr>
  <% end %>

  </tbody>
</table>
<p>送料<%= 800 %></p>
<p>商品金額<%= @total.round.to_s(:delimited) %></p>
<p>請求金額<%= (800 + @total.round).to_s(:delimited) %></p>

<div>支払い方法<%= @order.payment_method_i18n %></div>

<div>お届け先
〒<%= @order.postal_code %><%= @order.address %></br>
<%= @order.name %>
</div>


<%= form_with model: @order, url:public_orders_path do |f| %>
<%= f.hidden_field :postage, :value => 800 %>
<%= f.hidden_field :billing_amount, :value => 800 + @total.round %>
<%= f.hidden_field :payment_method, :value => @order.payment_method %>
<%= f.hidden_field :postal_code, :value => @order.postal_code %>
<%= f.hidden_field :address, :value => @order.address %>
<%= f.hidden_field :name, :value => @order.name %>


<%= f.submit '注文を確定する' ,class: 'btn btn-success btn-sm'%>
<% end %>

