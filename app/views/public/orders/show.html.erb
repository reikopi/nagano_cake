<h4>注文履歴詳細</h4>

<div class="container">
<div class="row">

<div class="col">
<p class="font-weight-bold">注文情報</p>
<table class="table table-bordered">
  <tr>
    <th>注文日</th>
    <th><%= l @order.created_at %></th>
  </tr>
  <tr>
    <th>配送先</th>
    <th>〒<%= @order.postal_code %></br><%= @order.address %></br>
      <%= @order.name %></th>
  </tr>
  <tr>
    <th>支払方法</th>
    <th><%= @order.payment_method_i18n %></th>
  </tr>
  <tr>
    <th>ステータス</th>
    <th><%= @order.status_i18n %></th>
  </tr>
  </table>
</div>


<div class="col">
<p class="font-weight-bold">請求情報</p>
<table class="table table-bordered">
  <tr>
    <th>商品合計</th>
    <th><%= @total.round.to_s(:delimited) %></th>
  </tr>
  <tr>
    <th>配送料</th>
    <th><%= 800 %></th>
  </tr>
  <tr>
    <th>ご請求額</th>
    <th><%= @order.billing_amount.to_s(:delimited) %></th>
  </tr>
</table>
</div>

</div>
</div>


<p class="font-weight-bold">注文内容</p>
<table class="table table-bordered">
  <thead>
    <th>商品</th>
    <th>単価(税込)</th>
    <th>個数</th>
    <th>小計</th>
  </thead>
  <tbody>
    <% @order.order_details.each do |order_detail|  %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.add_tax_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.subtotal %></td>

    </tr>
    <% end %>
  </tbody>
</table>