<h1>注文履歴一覧</h1>

<table>
  <thead>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td>〒<%= order.postal_code %><%= order.address %></br>
      <%= order.name %></td>
      <td><% @order_details.each do |order_detail|  %>
          <% order_detail.item_id %>
          <% end %>
      </td>
      <td><%= order.billing_amount.to_s(:delimited) %>円</td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", public_order_path(order.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>