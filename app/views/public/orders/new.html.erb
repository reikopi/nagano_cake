<h1>注文情報入力</h1>

<%= form_with model: @order,url: new_public_order_path do |f| %>
<h4>支払方法</h4>
<div>
<%= f.radio_button :payment_method, "credit_card" %>
<%= f.label :payment_method, "クレジットカード" %>
</div>
<div>
<%= f.radio_button :payment_method, "transfer" %>
<%= f.label :payment_method, "銀行振込" %>
</div>

<h4>お届け先</h4>
<div>
<%= f.radio_button :own_infomation, "1" %>
<%= f.label :own_infomation, "ご自身の住所" %>
<%= current_customer.own_infomation %>
</div>

<div>
<%= f.radio_button :newaddress, "3" %>
<%= f.label :newaddress, "新しいお届け先" %>

 <p>郵便番号（ハイフンなし）</p>
<%= f.text_field :postal_code %>

<p>住所</p>
<%= f.text_area :address %>

<p>宛名</p>
<%= f.text_field :name %>
</div>

<%= f.submit '新規登録' %>
<% end %>
