<h1>ショッピングカート</h1>


<%= button_to "カートを空にする", destroy_all_public_cart_items_path , method: :delete %>

<table>
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
      <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.add_tax_price %></td>
          <td>
            <%= form_with model: cart_item, url:public_cart_item_path(cart_item.id), method: :patch do |f| %>
            <%= f.select :amount, [*(1..10)], include_blank: false, selected: cart_item.amount %>
            <%= f.submit "変更" %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal %></td>
          <td><%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<p>合計金額<%= @total.round.to_s(:delimited) %></p>

<%= link_to '買い物を続ける', public_items_path %>


<%= link_to '情報入力に進む', new_public_order_path %>


