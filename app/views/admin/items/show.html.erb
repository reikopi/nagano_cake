<p id="notice"><%= notice %></p>
<div class="container">
<div class="row">


<h4>商品詳細</h4>

<div class="col-md-4">
<p><%= image_tag @item.get_image(200, 200) %></p>
</div>

<div class="col-md-8">
<table class="table">
<tbody>
    <tr>
        <th>商品名</th>
        <th><%= @item.name %></th>
    </tr>

    <tr>
        <th>商品説明</th>
        <th><%= @item.introduction %></th>
    </tr>

    <tr>
        <th>ジャンル</th>
        <th><%= @item.genre.name %></th>
    </tr>

    <tr>
        <th>税込価格（税抜価格）</th>
        <th><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</th>
    </tr>

    <tr>
        <th>販売ステータス</th>
        <th>
            <% if @item.is_active %>
            販売中
            <% else %>
            販売停止中
            <% end %>
        </th>
    </tr>

</tbody>
</table>
<%= link_to "編集する", edit_admin_item_path, class:"btn btn-success" %>
</div>
</div>
</div>