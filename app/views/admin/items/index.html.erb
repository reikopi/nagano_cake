
<h4>商品一覧</h4>
<%= link_to "新規登録", new_admin_item_path, class:"btn btn-success" %>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">商品ID</th>
      <th scope="col">商品名</th>
      <th scope="col">税抜価格</th>
      <th scope="col">ジャンル</th>
      <th scope="col">ステータス</th>
    </tr>
  </thead>
<tbody>
<% @items.each do |item| %>
<tr>
  <td><%= item.id %></td>
  <td><%= link_to item.name, admin_item_path(item.id) %></td>
  <td><%= item.price.to_s(:delimited) %></td>
  <td><%= item.genre.name %></td>
  <td>
    <% if item.is_active %>
    販売中
    <% else %>
    販売停止中
    <% end %>
  </td>
</tr>


<% end %>
</tbody>
</table>
<%= paginate @items %>