<h1>新規商品登録</h1>

<%= form_with model: @item, url: admin_items_path do |f| %>

<h4>商品画像</h4>
<%= f.file_field :image, accept: "image/*" %>

<h4>商品名</h4>
<%= f.text_field :name %>

<h4>商品説明</h4>
<%= f.text_area :introduction %>

<h4>ジャンル</h4>
<%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt:"-- 選択してください --"} %>


<h4>税抜価格</h4>
<%= f.number_field :price %>円
<div class="error">整数のみ入力できます</div>


<h4>販売ステータス</h4>
<%= f.radio_button :is_active, Item.is_actives.key(0) %>
<%= f.label :is_active, Item.is_actives_i18n[:sale] %>

<%= f.radio_button :is_active, Item.is_actives.key(1) %>
<%= f.label :is_active, Item.is_actives_i18n[:discontinued] %>


<%= f.submit '新規登録' %>

<% end %>