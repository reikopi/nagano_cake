<h4>商品編集</h4>
<div class="text-center">
<%= form_with model: @item, url: admin_item_path do |f| %>

<table class="table">
<tbody>
  <tr>
  <th>商品画像</th>
  <th><%= f.file_field :image, accept: "image/*" %></th>
  </tr>
  <tr>

  <tr>
    <th>商品名</th>
    <th><%= f.text_field :name %></th>
  </tr>

  <tr>
    <th>商品説明</th>
    <th><%= f.text_area :introduction %></th>
  </tr>

  <tr>
    <th>ジャンル</th>
    <th><%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt:"-- 選択してください --"} %></th>
  </tr>

  <tr>
    <th>税抜価格</th>
    <th><%= f.number_field :price %>円
       <div class="error">整数のみ入力できます</div>
    </th>

  </tr>

  <tr>
    <th>販売ステータス</th>
    <th><%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "販売中" %>

        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "販売停止中" %>
     </th>
  </tr>


</tbody>
</table>

<%= f.submit '変更を保存', class:"btn btn-success" %>

<% end %>
</div>