<h4>注文履歴詳細</h4>

<table class="table">
  <tbody>
  <tr>
  <th>購入者</th>
  <th><%= @order.customer.full_name %></th>
  </tr>

  <tr>
  <th>注文日</th>
  <th><%= l @order.created_at %></th>
  </tr>

  <tr>
  <th>配送先</th>
  <th>
    <%= @order.postal_code %>
    <%= @order.address %></br>
    <%= @order.name %>
  </th>
  </tr>

  <tr>
  <th>支払方法</th>
  <th><%= @order.payment_method_i18n %></th>
  </tr>

  <tr>
  <th>注文ステータス</th>
  <th><%= form_with model: @order, url:admin_order_path, method: :patch do |f| %>
      <%= f.select :status, Order.statuses_i18n.invert %>
      <%= f.submit "更新", class:"btn btn-success" %>
      <% end %>
  </th>
  </tr>

</tbody>
</table>

<table class="table">
  <thead class="thead-dark">

  <tr>
    <th scope="col">商品名</th>
    <th scope="col">単価（税込）</th>
    <th scope="col">数量</th>
    <th scope="col">小計</th>
    <th scope="col">制作ステータス</th>
    <th scope="col"></th>
  </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.add_tax_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.subtotal.to_s(:delimited) %></td>

      <td>
      <%= form_with model: order_detail, url:admin_order_detail_path, method: :patch do |f| %>
      <%= f.select :making_status, OrderDetail.making_statuses_i18n.invert %>
      <%= f.submit "更新", class:"btn btn-success" %>
      <% end %>
     </td>
    </tr>
    <% end %>
  </tbody>
</table>

