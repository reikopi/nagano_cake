<h1>会員一覧</h1>

<table>
<thead>
 <tr>

  <th>会員ID</th>
  <th>氏名</th>
  <th>メールアドレス</th>
  <th>ステータス</th>

 </tr>
</thead>

<tbody>
<!--この辺一応、modelでカラム名を確認する。-->
<% @customers.each do |customer| %>
 <tr>
  <td><%= customer.id %></td>
  <td><%= link_to customer.full_name , admin_customer_path(customer) %></td>
  <td><%= customer.email %></td>
  <td>
    <% if customer.is_active %>
    有効
    <% else %>
    退会
    <% end %>
    </td>
</tr>
<% end %>

</tbody>
</table>

<%= paginate @customers %>